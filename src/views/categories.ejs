<%- include('partials/header', { title: 'Категории' }) %>

<div class="container mt-4">
    <h2 class="text-center">Категории</h2>
    <div id="categories" class="row">
        <% categories.forEach(category => { %>
            <div class="col-md-4" data-category-id="<%= category.id %>">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <h5 class="card-title"><%= category.name %></h5>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>

    <div id="subcategories" class="row mt-4 d-none">
        <h2 class="text-center">Подкатегории для <span id="category-name"></span></h2>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>
<script>
$(document).ready(function() {
    $('.col-md-4').on('click', function() {
        const categoryId = $(this).data('category-id');
        const categoryName = $(this).find('.card-title').text();
        
        $.get(`/categories/${categoryId}/subcategories`, function(data) {
            if (data.success) {
                $('#categories').addClass('d-none');
                $('#subcategories').removeClass('d-none');
                $('#category-name').text(categoryName);
                
                $('#subcategories').empty();
                data.subcategories.forEach(subcategory => {
                    $('#subcategories').append(`
                        <div class="col-md-4">
                            <div class="card mb-4">
                                <div class="card-body text-center">
                                    <h5 class="card-title">${subcategory.name}</h5>
                                </div>
                            </div>
                        </div>
                    `);
                });
            }
        });
    });
});
</script>
</main>
</body>
</html>
