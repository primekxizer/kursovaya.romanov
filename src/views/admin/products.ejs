
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <% include('../partials/header', { title: 'Управление товарами' }) %>
    <main class="container mt-4">
        <h1 class="text-center"><%= title %></h1>
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Название</th>
                            <th>Цена</th>
                            <th>Фото</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% products.forEach(product => { %>
                            <tr>
                                <td><a href="/products/<%= product.id %>"><%= product.name %></a></td>
                                <td><%= product.price %></td>
                                <td>
                                    <img src="<%= product.imageUrl %>" alt="<%= product.name %>" style="max-width: 100px;">
                                </td>
                                <td>
                                    <form action="/admin/products/<%= product.id %>/edit" method="POST" enctype="multipart/form-data">
                                        <div class="mb-3">
                                            <label for="name" class="form-label">Новое название</label>
                                            <input type="text" class="form-control" id="name" name="name" value="<%= product.name %>" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="price" class="form-label">Новая цена</label>
                                            <input type="number" step="0.01" class="form-control" id="price" name="price" value="<%= product.price %>" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="image" class="form-label">Выберите новое изображение</label>
                                            <input type="file" class="form-control" id="image" name="image" accept="image/*">
                                        </div>
                                        <button type="submit" class="btn btn-sm btn-primary float-end">Сохранить изменения</button>
                                    </form>
                                    <form action="/admin/products/<%= product.id %>/delete" method="POST">
                                        <button type="submit" class="btn btn-sm btn-danger float-end">Удалить</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
                <a href="/admin/products/add" class="btn btn-success">Добавить новый товар</a>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
