<%- include('partials/header', { title: 'Оформление заказа' }) %>
<main class="container mt-4">
    <h1 class="text-center mb-4">Оформление заказа</h1>
    <form action="/checkout/process" method="POST">
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" required>
        </div>
        <div class="mb-3">
            <label for="name" class="form-label">Имя</label>
            <input type="text" class="form-control" id="name" name="name" required>
        </div>
        <div class="mb-3">
            <label for="phone" class="form-label">Телефон</label>
            <input type="tel" class="form-control" id="phone" name="phone" required>
        </div>
        <div class="mb-3">
            <label class="form-check-label">Выберите способ доставки:</label>
        </div>
        <div class="mb-3 form-check">
            <input type="radio" class="form-check-input" id="pickup" name="deliveryMethod" value="pickup" checked>
            <label for="pickup" class="form-check-label">Самовывоз</label>
        </div>
        <div class="mb-3 form-check">
            <input type="radio" class="form-check-input" id="delivery" name="deliveryMethod" value="delivery">
            <label for="delivery" class="form-check-label">Доставка</label>
        </div>
        <div id="address-field" class="mb-3" style="display: none;">
            <label for="address" class="form-label">Адрес доставки</label>
            <input type="text" class="form-control" id="address" name="address">
        </div>
        <button type="submit" class="btn btn-primary">Подтвердить заказ</button>
    </form>
    
 
    <% if (locals.orderPlaced) { %>
        <div class="alert alert-success mt-3" role="alert">
            Заказ успешно оформлен!
        </div>
    <% } %>
</main>
<%- include('partials/footer') %>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const deliveryRadio = document.getElementById('delivery');
        const addressField = document.getElementById('address-field');

        deliveryRadio.addEventListener('change', () => {
            if (deliveryRadio.checked) {
                addressField.style.display = 'block';
            } else {
                addressField.style.display = 'none';
            }
        });
    });
</script>
